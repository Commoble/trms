<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- Name of the class in *JAVA* -->
    <!-- If we have hibernate configured to do anything other than just validate tables,
        then this class configuration may drop and/or create your table as well -->
    <class name="com.revature.trms.models.Department" table="departments">
        <!--
        Any attributes here apply to the actual SQL table.
        If you don't include them, then the name will be assumed
        based on the field name in the Class.
        -->
        <!-- ID -> we define which java field is the primary key in the table
            name -> name of the java field
            type -> name of the DB table field type?
            column -> name of the DB table's field

        -->
        <id name="departmentID" type="int" column="department_id">
            <!-- which type of autogenerated values we use - identity = serial -->
            <generator class="identity" /> <!-- self-closing tag! -->
        </id>

        <!-- Other fields are specified here as a list of property tags -->
        <property name="name" type="string" not-null="true" update="true"/>
    </class>
</hibernate-mapping>